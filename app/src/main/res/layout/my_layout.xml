<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="#ECECEC"
    android:fitsSystemWindows="true"

    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/my_cardImageVIew"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/camera_button"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/boy"

                tools:layout_editor_absoluteX="17dp"
                tools:layout_editor_absoluteY="40dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_below="@id/camera_button"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/my_cardImageVIew"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="22dp" />
            <TextView
                android:id="@+id/numText"
                android:layout_below="@id/textView"
                android:text="号码：1122345798"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/my_cardImageVIew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <ImageButton

            android:layout_alignParentRight="true"
            android:id="@+id/camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/camera" />

        <ImageButton

            android:layout_alignTop="@id/numText"
            android:layout_toLeftOf="@id/rightreactan"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:id="@+id/image_erweima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/erweima" />

        <ImageButton
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:id="@+id/rightreactan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@id/numText"
            android:background="@null"
            app:srcCompat="@drawable/rigthractan" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>