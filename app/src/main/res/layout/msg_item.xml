<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <androidx.cardview.widget.CardView

        android:id="@+id/timeCardView"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:background="#F0F0F0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/time_text"
        android:textColor="#1B1B1B"

        android:text="晚上22:03"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
>
        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_toLeftOf="@id/cardView_right"
            android:layout_marginRight="10dp"
            android:background="@drawable/buble_left"
            android:textColor="#fff" />
        <androidx.cardview.widget.CardView
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:id="@+id/cardView_right"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/right_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/girl"
            android:layout_gravity="center_vertical"/>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
>
        <androidx.cardview.widget.CardView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/cardView_left"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/left_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/boy"
            android:layout_gravity="center_vertical"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:background="@drawable/buble_right"
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_toRightOf="@id/cardView_left"
            android:layout_marginLeft="10dp"

            android:textColor="#fff" />
    </RelativeLayout>
</LinearLayout>